<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - The Zoo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">The Zoo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            @Html.ActionLink("🏠 Trang chủ", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("🐒 Quản lí động vật", "Index", "TCages", routeValues: null, htmlAttributes: new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("👩‍💼 Quản lí nhân viên", "Index", "TEmployees", routeValues: null, htmlAttributes: new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Tickets">🎫 Quản lý Vé</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Visitors">👥 Quản lý Khách tham quan</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("user") != null)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <img src="~/images/default-avatar.png" alt="Avatar" class="rounded-circle" style="width: 30px; height: 30px; margin-right: 5px;">
                                <span class="text-white">Xin chào, @Context.Session.GetString("user")</span>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Log/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Log/Register">Đăng ký</a>
                            </li>
                        }
                    </ul>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

   

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        <p>&copy; 2024 The Zoo. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false) <!-- This is where your specific page scripts will be rendered -->
</body>
</html>
