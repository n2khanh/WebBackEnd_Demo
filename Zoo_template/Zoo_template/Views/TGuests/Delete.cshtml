    </dl>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="GuestId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
