@model Zoo_template.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng Kí";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}
<form asp-action="Register" method="post" class="container mt-5 p-4 border rounded bg-light">
    <h3 class="text-center mb-4">Đăng Ký</h3>
    <div class="form-group">
        <label asp-for="UserName" class="font-weight-bold">Tên người dùng</label>
        <input asp-for="UserName" class="form-control" placeholder="Nhập tên người dùng" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="font-weight-bold">Mật khẩu</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="font-weight-bold">Xác nhận mật khẩu</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold">Họ và tên</label>
        <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="font-weight-bold">Tuổi</label>
        <input asp-for="Age" type="number" class="form-control" placeholder="Nhập tuổi" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="font-weight-bold">Giới tính</label>
        <select asp-for="Gender" class="form-control">
            <option value="1">Nam</option>
            <option value="0">Nữ</option>
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="font-weight-bold">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Nhập địa chỉ email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Đăng Ký</button>
</form>

