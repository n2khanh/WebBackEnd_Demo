@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/Login_Layout.cshtml";
}


<div class="container mt-5">

@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}

<form method="post">
    <div class="form-group">
        <label>Tên Người Dùng:</label>
        <input type="text" class="form-control" name="UserName" value="@ViewBag.UserName" required placeholder="Nhập tên người dùng" />
    </div>
    <div class="form-group">
        <label>Mật Khẩu:</label>
        <input type="password" class="form-control" name="password" required placeholder="Nhập mật khẩu" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Đăng Nhập</button>
    </div>
    <div class="text-center">
        <a href="/Log/Register">Chưa có tài khoản? Đăng ký ngay!</a>
    </div>
</form>
</div>