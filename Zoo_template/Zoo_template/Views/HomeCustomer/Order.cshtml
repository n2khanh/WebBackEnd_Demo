@{
    ViewData["Tilte"] = "Đặt vé";
}
@model Customer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt vé</title>
    <link rel="stylesheet" href="~/css/OrderCustomer.css" />
    <link rel="shortcut icon" href="./js/OrderCustomer.js" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
</head>

<body>
    <div>
        <form asp-controller="HomeCustomer" asp-action="Order" method="post" class="mt-3" margin-top="opx" >
            <h2>Điền thông tin mua vé</h2>
            <div class="form-group fullname">
                <label asp-for="Fullname">Họ tên</label>
                <input type="text" id="fullname" placeholder="Nhập họ tên">
            </div>
            <div class="form-group phonenumber">
                <label asp-for="PhoneNumber">Nhập số điện thoại</label>
                <input type="text" id="phone" placeholder="Nhập số điện thoại">
            </div>
            <div class="form-group email">
                <label asp-for="Email">Email</label>
                <input type="text" id="email" placeholder="Nhập Email">
            </div>
            <div class="form-group email">
                <label asp-for="numberofTicket">Số lượng vé</label>
                <input type="number" id="numberOfTickets" placeholder="Nhập số lượng">
            </div>
            <div class="form-group password">
                <label asp-for="Password">Mật khẩu</label>
                <input type="password" id="password" placeholder="Nhập mật khẩu">
                <i id="pass-toggle-btn" class="fa-solid fa-eye-slash" onclick="togglePasswordVisibility()"></i>
            </div>
            <div class="form-group date">
                <label asp-for="Date">Chọn ngày</label>
                <input type="date" id="date" placeholder="Chọn ngày">
            </div>
            <div class="form-group gender">
                <label asp-for="Gender">Giới tính</label>
                <select id="gender">
                    <option value="" selected disabled>Chọn giới tính</option>
                    <option value="Male">Nam</option>
                    <option value="Female">Nữ</option>
                    <option value="Other">Khác</option>
                </select>
            </div>
            <div class="form-group submit-btn">
                <input type="button" value="Xác nhận" >
            </div>
        </form>
    </div>
</body>
</html>