@model IEnumerable<Zoo_template.Models.TAnimal>
<head>
    <link href="~/css/form.css" rel="stylesheet" />
</head>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.ScienName)</th>
            <th>@Html.DisplayNameFor(model => model.TimeIn)</th>
            <th>@Html.DisplayNameFor(model => model.TimeOut)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Image)</th>
            <th>@Html.DisplayNameFor(model => model.CageId)</th>
            <th>@Html.DisplayNameFor(model => model.Food.FoodName)</th>
            <th>@Html.DisplayNameFor(model => model.Species.SpeciesName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ScienName)</td>
                <td>@Html.DisplayFor(modelItem => item.TimeIn)</td>
                <td>@Html.DisplayFor(modelItem => item.TimeOut)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>
                    <img src="~/images/@item.Image" alt="Image of @item.Name" width="100px" class="img-thumbnail" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.CageId)</td>
                <td>@Html.DisplayFor(modelItem => item.Food.FoodName)</td>
                <td>@Html.DisplayFor(modelItem => item.Species.SpeciesName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnimalId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AnimalId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AnimalId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<ul class="pagination">
    @for (int i = 1; i <= ViewBag.pageNum; i++)
    {
        <li class="page-item" page="@i">
            <a class="page-link" href="javascript:void(0);">@i</a>
        </li>
    }
</ul>