@model Zoo_template.Models.TCage

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/css/form.css" rel="stylesheet" />
</head>

<h1 class="text-center mb-3">Chỉnh Sửa Chuồng</h1>

<div class="container">
    <div class="card shadow-sm p-3">
        <h4 class="card-title text-center mb-3">Thông Tin Chuồng</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CageId" />

            <div class="form-group">
                <label asp-for="AreaId" class="control-label"></label>
                <select asp-for="AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
                <span asp-validation-for="AreaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxQuantity" class="control-label"></label>
                <input asp-for="MaxQuantity" class="form-control" />
                <span asp-validation-for="MaxQuantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="text-center mt-3">
                <input type="submit" value="Lưu" class="btn btn-primary px-3" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
